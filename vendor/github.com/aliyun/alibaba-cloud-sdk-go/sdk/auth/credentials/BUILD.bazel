load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "access_key_credential.go",
        "ecs_ram_role.go",
        "rsa_key_pair_credential.go",
        "sts_credential.go",
        "sts_role_arn_credential.go",
    ],
    importmap = "github.com/jetstack/cert-manager/vendor/github.com/aliyun/alibaba-cloud-sdk-go/sdk/auth/credentials",
    importpath = "github.com/aliyun/alibaba-cloud-sdk-go/sdk/auth/credentials",
    tags = ["manual"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "go_default_test",
    srcs = [
        "access_key_credential_test.go",
        "ecs_ram_role_test.go",
        "rsa_key_pair_credential_test.go",
        "sts_credential_test.go",
        "sts_role_arn_credential_test.go",
    ],
    embed = [":go_default_library"],
    tags = ["manual"],
    deps = ["//vendor/github.com/stretchr/testify/assert:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
