load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "debug.go",
        "utils.go",
    ],
    importmap = "github.com/jetstack/cert-manager/vendor/github.com/aliyun/alibaba-cloud-sdk-go/sdk/utils",
    importpath = "github.com/aliyun/alibaba-cloud-sdk-go/sdk/utils",
    tags = ["manual"],
    visibility = ["//visibility:public"],
    deps = ["//vendor/github.com/satori/go.uuid:go_default_library"],
)

go_test(
    name = "go_default_test",
    srcs = [
        "debug_test.go",
        "utils_test.go",
    ],
    embed = [":go_default_library"],
    tags = ["manual"],
    deps = ["//vendor/github.com/stretchr/testify/assert:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
