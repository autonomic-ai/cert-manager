load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "doc.go",
        "error.go",
        "http.go",
    ],
    importmap = "github.com/jetstack/cert-manager/vendor/github.com/cloudflare/cfssl/errors",
    importpath = "github.com/cloudflare/cfssl/errors",
